{
  "transform": {
    "^.+\\.ts$": [
      "ts-jest",
      {
        "useESM": true,
        "tsconfig": { "noEmitOnError": false }
      }
    ]
  },
  "extensionsToTreatAsEsm": [".ts"],
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "testEnvironment": "node",
  "collectCoverageFrom": ["src/**/*.ts"],
  "modulePathIgnorePatterns": ["<rootDir>/build/"]
}
